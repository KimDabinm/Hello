<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity10">

    <!-- TextInputLayout
        : plaette에서 돋보기 클릭해서 검색
        : EditText를 좀 더 편하게 사용할 수 있는 레이아웃
        : 혹시 안되면 build.gradle(app)에서 implementation 'com.google.android.material:material:1.3.0' 추가

     -->
    <!-- style : OutlinedBox  // FilledBox (기본 스타일) -->
    <!-- passwordToggleEnabled: 비밀번호 보기(눈깔모양) -->

    <!-- counterEnabled : 텍스트의 길이를 카운트하는 기능 -->
   <!-- counterMaxLength : 최대 입력 텍스트 길이 설정
                         - 초과하면 빨간색으로 경고를 표시-->
    <!-- maxLength : 10자리 초과하지 못하게 설정 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout1"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:passwordToggleEnabled="true"

        app:counterEnabled="true"
        app:counterMaxLength="10"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"

            android:inputType="textPassword"
            android:maxLength="10"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="비밀번호" />
        </com.google.android.material.textfield.TextInputLayout>
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>